<control:WindowBase x:Class="CatchingFire.Area.Setting.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:UtilityControl.Control;assembly=UtilityControl"
        xmlns:view="clr-namespace:CatchingFire.Area.Setting.View"
        TitleHorizontalAlignment="Center" CaptionHeight="0" CaptionForeground="#737373" Height="420" Width="650" BorderBrush="#ffffff" ResizeMode="NoResize">
    
    <Grid Background="#555555">
        <control:UTabControl Orientation="Vertical" AllowAnimation="True" Style="{StaticResource LeftTabControl}">
            <TabItem Header="账号" Width="100" >
                <view:UserInfo></view:UserInfo>
            </TabItem>
            <TabItem Header="常规" Width="100" >
                <view:General></view:General>
            </TabItem>
            <TabItem Header="快捷键" Width="100">
                <view:Shortcut></view:Shortcut>
            </TabItem>
        </control:UTabControl>
    </Grid>
</control:WindowBase>
