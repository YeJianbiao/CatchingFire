<UserControl x:Class="CatchingFire.Area.Setting.View.Shortcut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource TextForeground}"></Setter>
            <Setter Property="Margin" Value="5,10"></Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="White" Padding="5,5,5,5">
        <Grid>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="建设中..."></TextBlock>
        </Grid>
    </Border>
</UserControl>
